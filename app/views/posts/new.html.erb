<h1>Posts#new</h1>


<% if flash[:errors]%>
    <% flash[:errors].each do |e| %>
        <li style="color: red">
            <%= e %>
        </li>
    <%end%>
<%end%>
<br>


<%= form_with model:@post do |f| %>
<%= f.label :title %>
<%= f.text_field :title %>
<br/>
<%= f.label :content %>
<%= f.text_field :content %>
<br/>
<%= f.collection_select :blogger_id, @bloggers, :id, :name %>
<%= f.collection_select :destination_id, @destinations, :id, :name %>

<%= f.submit %>

<%end%>