<h1>Bloggers#new</h1>

<% if flash[:errors]%>
    <% flash[:errors].each do |e| %>
        <li style="color: red">
            <%= e %>
        </li>
    <%end%>
<%end%>
<br>

<%=form_with model: @blogger do |f|%>

<%=f.label "Name: "%>
<%=f.text_field :name%> 
<br>
<%=f.label "Bio: "%>
<%=f.text_field :bio%>
<br>
<%=f.label "Age: "%>
<%=f.number_field :age%>
<br>
<%=f.submit%>

<%end%>